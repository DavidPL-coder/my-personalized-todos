NODE_ENV="Development"
ASPNETCORE_ENVIRONMENT=${NODE_ENV}

MPT_APP_PROTOCOL="https"
MPT_APP_DOMAIN_NAME="localhost"

MPT_FRONTEND_CONTAINER_PORT=443
MPT_BACKEND_CONTAINER_PORT=8080
MPT_DATABASE_CONTAINER_PORT=1433

ASPNETCORE_URLS="${MPT_APP_PROTOCOL}://*:${MPT_BACKEND_CONTAINER_PORT}"
MPT_FRONTEND_URL="${MPT_APP_PROTOCOL}://${MPT_APP_DOMAIN_NAME}:${MPT_FRONTEND_CONTAINER_PORT}"
MPT_BACKEND_URL="${MPT_APP_PROTOCOL}://${MPT_APP_DOMAIN_NAME}:${MPT_BACKEND_CONTAINER_PORT}"
MPT_BACKEND_URL_FOR_NODE=""

MPT_CORS_POLICY_NAME=""
