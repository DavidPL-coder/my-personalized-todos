MPT_DATABASE_NAME="Database"
MPT_DB_USER_PASSWORD="Password123"
MPT_CONNECTION_STRING=""
MPT_CONNECTION_STRING_FOR_CONNECTION_TEST=""
MPT_DB_CONNECTION_LIMIT=20000 # It should greater when we want to update database server
MPT_DB_CONNECTION_WAITING_TIME=100

MPT_JWT_ISSUER=${MPT_BACKEND_URL}
MPT_JWT_AUDIENCE=${MPT_BACKEND_URL}
MPT_JWT_KEY=""
MPT_JWT_EXPIRE_HOURS=4
MPT_TOKEN_COOKIE_NAME="token-cookie"

MPT_MIN_LOGIN_LENGTH=4
MPT_MIN_PASSWORD_LENGTH=8
MPT_MIN_AGE=18
MPT_MAX_AGE=100

